<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="Woofy.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
        <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="Woofy.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
        </sectionGroup>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>
    <applicationSettings>
        <Woofy.Properties.Settings>
            <setting name="ComicInfosFolderName" serializeAs="String">
                <value>ComicInfos</value>
            </setting>
            <setting name="ConnectionString" serializeAs="String">
                <value>Data Source=data.s3db;Version=3;</value>
            </setting>
            <setting name="PadFileUrl" serializeAs="String">
                <value>http://woofy.sourceforge.net/pad_file.xml</value>
            </setting>
        </Woofy.Properties.Settings>
    </applicationSettings>
    <userSettings>
        <Woofy.Properties.Settings>
            <setting name="LastUsedComicInfoFile" serializeAs="String">
                <value />
            </setting>
            <setting name="LastNumberOfComicsToDownload" serializeAs="String">
                <value>-1</value>
            </setting>
            <setting name="DefaultDownloadFolder" serializeAs="String">
                <value />
            </setting>
            <setting name="ProxyAddress" serializeAs="String">
                <value>comics</value>
            </setting>
            <setting name="ProxyPort" serializeAs="String">
                <value>-1</value>
            </setting>
            <setting name="MinimizeToTray" serializeAs="String">
                <value>True</value>
            </setting>
            <setting name="PreviouslyRefusedApplicationVersion" serializeAs="String">
                <value>0.0.0.0</value>
            </setting>
            <setting name="AutomaticallyCheckForUpdates" serializeAs="String">
                <value>True</value>
            </setting>
            <setting name="FirstRun" serializeAs="String">
                <value>True</value>
            </setting>
        </Woofy.Properties.Settings>
    </userSettings>
    <log4net>
        <appender name="appender" type="log4net.Appender.FileAppender">
            <file value="errorLog.txt" />
            <appendToFile value="true" />
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %message%newline" />
            </layout>
        </appender>
        
        <root>
            <level value="DEBUG" />
            <appender-ref ref="appender" />
        </root>
    </log4net>
</configuration>