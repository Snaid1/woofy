<Window x:Class="Woofy.Views.ViewComics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Loaded="Window_Loaded"
        
        Title="Woofy" 
        Height="600" Width="800">

    <Window.Resources>
        <DataTemplate x:Key="listBoxItem">
            <StackPanel Margin="0, 1, 0, 1" Orientation="Horizontal">
                <Image Width="16" Height="16" Source="{Binding FaviconPath}"/>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>

        <Style TargetType="{x:Type ListBox}">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="350"/>
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="ItemTemplate" Value="{StaticResource listBoxItem}"/>
        </Style>
    </Window.Resources>

    <StackPanel
        Orientation="Horizontal"
        VerticalAlignment="Top"
        >
        <ListBox Name="comicsList"
                 HorizontalAlignment="Left"
                 >
        </ListBox>
    </StackPanel>

</Window>
